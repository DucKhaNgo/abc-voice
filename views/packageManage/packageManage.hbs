<!--Modal: addModal-->
<div class="modal fade" id="newModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog modal-notify modal-info" role="document">
        <!--Content-->
        <div class="modal-content text-center">
            <!--Header-->
            <div class="modal-header d-flex justify-content-center">
                <p class="heading">New Package</p>
            </div>
            <!--Body-->
            <div class="modal-body">

                <form method="POST" action="packagemanage/addpackage" >
                    <div class="input-group input-group-sm mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="inputGroup-sizing-sm">Name</span>
                        </div>
                        <input required type="text" class="form-control" aria-label="Small"
                            aria-describedby="inputGroup-sizing-sm" name="name">
                    </div>

                    <div class="input-group input-group-sm mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="inputGroup-sizing-sm">Term</span>
                        </div>
                        <input required type="number" class="form-control" aria-label="Small"
                            aria-describedby="inputGroup-sizing-sm" name="term">
                    </div>

                    <div class="input-group input-group-sm mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="inputGroup-sizing-sm">Price</span>
                        </div>
                        <input required type="number" class="form-control" aria-label="Small"
                            aria-describedby="inputGroup-sizing-sm" name="price">
                    </div>

                    <div class="input-group input-group-sm mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="inputGroup-sizing-sm">NumRequest</span>
                        </div>
                        <input required type="number" class="form-control" aria-label="Small"
                            aria-describedby="inputGroup-sizing-sm" name="numReq">
                    </div>

                    <button type="submit" class="btn btn_1">Add</button>
                </form>
            </div>
            <!--Footer-->
            <div class="modal-footer flex-center">

                <button type="button" class="closeModalBtn btn btn_1" data-dismiss="modal">Close</button>
            </div>
        </div>
        <!--/.Content-->
    </div>
</div>
