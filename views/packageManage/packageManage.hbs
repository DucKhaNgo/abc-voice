<section class="use_sasu">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-12">
                <div class="section_tittle text-center">
                    <h2>List of Packages</h2>
                    <div class="progress-table-wrap">
                        <div style="display:flex ; flex-direction:row-reverse; margin-bottom:5px"> <button
                                class="genric-btn success-border radius" data-toggle="modal" data-target="#newModal">
                                Add new package</button>
                        </div>
                        <div class="progress-table">
                            <div class="table-head">
                                <div class="serial">#</div>
                                <div class="percentage">Package Name</div>
                                <div class="country">Price</div>
                                <div class="country">Expire</div>
                                <div class="visit">Change</div>
                                <div class="visit">Delete</div>
                            </div>

                            <div class="table-row">

                                <div class="counterCell serial" style="display: flex;justify-content: center;"></div>
                                <div class="percentage"><input type="hidden" name="id" />tên package</div>
                                <div class="country" style="justify-content: center">thời gian</div>
                                <div class="country" style="justify-content: center">giá</div>
                                <div class="visit" style="justify-content: center">
                                    <button class="genric-btn primary-border circle editPackageBtn" data-toggle="modal"
                                        data-target="#editModal">Edit</button>
                                </div>
                                <div class="visit">
                                    <form method="POST" action="" style="width:100%">
                                        <button style="justify-content: center" class="genric-btn success-border circle"
                                            type="submit">Delete</button>
                                    </form>
                                </div>



                            </div>

                        </div>
                    </div>
                    {{#each pages}}
                    <a class="getRevenueByYearBtn genric-btn success-border  {{#if this.currentPage}}currentPage{{/if}} "
                        {{#if this.currentPage}}{{else}}href="?page={{this.id}}" {{/if}}>{{this.id}}</a>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
</section>
